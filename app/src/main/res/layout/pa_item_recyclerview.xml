<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pa_cvItem_Recyclerview"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="@dimen/petsActivity_cardview_elevation"
    android:layout_marginBottom="@dimen/petsActivity_cardview_margin_bottom"
    android:layout_marginHorizontal="@dimen/petsActivity_cardview_margin_horizontal"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/pa_lytItem_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/pa_imgItem_RecyclerView"
            android:layout_width="0dp"
            android:layout_height="@dimen/petsActivity_imageview_height"
            android:scaleX="@dimen/petsActivity_imageview_scale"
            android:scaleY="@dimen/petsActivity_imageview_scale"
            android:layout_weight="3"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/pa_nameItem_Recyclerview"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textSize="@dimen/petsActivity_text_size_item"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
